    <script>
        // Function to show the login form when "View Account" is clicked
        function showLoginForm() {
            document.getElementById('loginContainer').style.display = 'flex';
        }

        // Function to close the login form when "×" is clicked
        function closeLoginForm() {
            document.getElementById('loginContainer').style.display = 'none';
        }

        // Function to perform login validation
        function login() {
            const mobileNumber = document.getElementById('mobileNumber').value;
            const password = document.getElementById('password').value;

            // Validate mobile number (must be 10 digits) and password ("joseph5566")
            if (mobileNumber.length === 10 && password === "joseph5566") {
                // Redirect to YouTube on successful login
                window.location.href = "https://www.youtube.com";
            } else {
                alert("Invalid mobile number or password.");
            }
        }

        // Show Transfer Funds page
        function showFunds() {
            document.getElementById('fundsContainer').style.display = 'flex';
        }

        // Close Transfer Funds page
        function closeFundsForm() {
            document.getElementById('fundsContainer').style.display = 'none';
        }

        // Apply for Loan (redirect to Google)
        function applyForLoan() {
            window.location.href = "https://www.bankofbaroda.in/personal-banking/loans/personal-loan/baroda-digital-pre-approved-personal-loan";
        }

        // View Statement (redirect to Chrome)
        function viewStatement() {
            window.location.href = "https://www.chrome.com";
        }

        // Show Account Settings page
        function showSettings() {
            document.getElementById('settingsContainer').style.display = 'flex';
        }

        // Close Account Settings page
        function closeSettingsForm() {
            document.getElementById('settingsContainer').style.display = 'none';
        }
    </script>

